 #sourceTab{
    knot-example-tab[
        template:codePageTemplate;
        header:title;

        //in "@/sourceTab.onPageAdded", call highlightBlock to highlight the code
        @pageAdded:@/sourceTab.onPageAdded]: /sourceTab.sourceInformation
}

#sourceTab code{
    text:content;
    class:name>{if(value=="CBS") return "css";  return value.toLowerCase();}
}

